<body>
    <% for(const key in flash){ %>               
        <span role="alert" class="flash" dir="rtl">
          <%= flash[key] %>
        </span>
    <% } %>
    <button id="btn-update">بروزرسانی آگهی ها</button>
	<h1>آگهی های تازه</h1>
    <div class="product-handler">

        <div>
            <%products.forEach(product => { %>
                <%- include("templates/product.ejs", {product}) %>
            <% })%>
        </div>

    </div>



	<script src="/js/axios.min.js"></script>
	<script src="/js/index.js" defer></script>
</body>
</html>